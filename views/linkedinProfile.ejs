<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LinkedIn Profile</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .profile, .posts {
      margin-bottom: 30px;
    }
    .post {
      border: 1px solid #ddd;
      padding: 10px;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <h1>LinkedIn Profile</h1>

  <!-- Profile Info -->
  <div class="profile">
    <p><strong>Name:</strong> <%= profile.localizedFirstName %> <%= profile.localizedLastName %></p>
    <p><strong>Profile ID:</strong> <%= profile.id %></p>
  </div>

  <!-- Posts Info -->
  <div class="posts">
    <h2>Your Posts:</h2>
    <% if (posts.length === 0) { %>
      <p>No posts available.</p>
    <% } else { %>
      <% posts.forEach(post => { %>
        <div class="post">
          <p><strong>Post Content:</strong> <%= post.specificContent['com.linkedin.ugc.ShareContent'].shareCommentary.text %></p>
        </div>
      <% }) %>
    <% } %>
  </div>

</body>
</html>
