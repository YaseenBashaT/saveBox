<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Connect to Social Media</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding-top: 100px;
    }

    .button {
      background-color: #ff0000;
      color: white;
      padding: 15px 30px;
      font-size: 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin-bottom: 20px;
    }

    .button.linkedin {
      background-color: #0077b5; /* LinkedIn Blue */
    }

    .button.reddit {
      background-color: #FF4500; /* Reddit Orange */
    }

    .button:hover {
      opacity: 0.9;
    }
  </style>
</head>
<body>
  <h1>Connect Your Accounts</h1>

  <!-- YouTube Button -->
  <button class="button" id="authYouTubeButton">Connect to YouTube</button>

  <!-- LinkedIn Button -->
  <button class="button linkedin" id="authLinkedInButton">Connect to LinkedIn</button>

  <!-- Reddit Button -->
  <button class="button reddit" id="authRedditButton">Connect to Reddit</button>

  <script>
    document.getElementById('authYouTubeButton').addEventListener('click', function() {
      window.location.href = '/auth';  // YouTube OAuth flow
    });

    document.getElementById('authLinkedInButton').addEventListener('click', function() {
      window.location.href = '/auth/linkedin';  // LinkedIn OAuth flow
    });

    document.getElementById('authRedditButton').addEventListener('click', function() {
      window.location.href = '/auth/reddit';  // Reddit OAuth flow
    });
  </script>
</body>
</html>
